{
    "name": "coderic-ecosystem/emnify-sdk",
    "description": "Supply your swarm of IoT devices with cloud connectivity by emnify. Automate your routines with this SDK for PHP.    ",
    "keywords": [
        "php",
        "sdk",
        "api"
    ],
    "homepage": "https://github.com/CodericEcosystem",
    "license": "MIT",
    "authors": [
        {
            "name": "Neftali Yagua",
            "email": "despacho@neftaliyagua.com"
        }
    ],
    "type": "library",
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2"
    },
    "autoload": {
        "psr-4": { "CodericEcosystem\\EmnifySdk\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "CodericEcosystem\\EmnifySdk\\" : "test/" }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests"
    }
}
